@model IINTOS.ViewModels.GenericUserViewModel
@{
    ViewData["Title"] = "AdminCreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create User</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminCreateUser">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality" class="control-label"></label>
                <div>
                    <div>
                        <select id="Nationality" asp-for="Nationality" name="Nationality" asp-items="ViewBag.Nationality" class="form-control">Select a Country</select>
                    </div>

                </div>
                <span asp-validation-for="Nationality" class="text-danger"></span>

            </div>
            <div>
                <label asp-for="Roles" class="control-label"></label>
                <div>
                    <select id="Nationality" asp-for="Roles" name="Roles" asp-items="ViewBag.Roles" class="form-control">Select a Role</select>
                </div>
                <span asp-validation-for="Roles" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
