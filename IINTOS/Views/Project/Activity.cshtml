@model IINTOS.Models.Activity

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div>
        <h4>Project</h4>
        <hr />

        <div>
          <div class="row">
            <div class="col-4">
              <div class="list-group" id="list-tab" role="tablist">
                <a asp-action="Details" asp-route-id=@ViewContext.RouteData.Values["id"] class="list-group-item list-group-item-action">Project</a>
                <a asp-action="SchoolProject" asp-route-id=@ViewContext.RouteData.Values["id"] class="list-group-item list-group-item-action">Schools</a>
                <a class="list-group-item list-group-item-action active" id="list-profile-list" data-toggle="list" href="#list-activities" role="tab" aria-controls="activities">Activities</a>
              </div>
            </div>
            <div class="col-8">
              <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade  show active" id="list-activities" role="tabpanel" aria-labelledby="list-activities-list">
                <form asp-action="CreateActivity">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <div class="form-group">
                          <label asp-for="Title" class="control-label"></label>
                          <input asp-for="Title" class="form-control"></textarea>
                          <span asp-validation-for="Title" class="text-danger"></span>
                      </div>
                        <div class="form-group">
                          <label asp-for="Description" class="control-label"></label>
                          <input asp-for="Description" class="form-control"></textarea>
                          <span asp-validation-for="Description" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                          <input type="submit" value="Create Activity" class="btn btn-primary" />
                      </div>
                </form>

                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
<div>
</div>
