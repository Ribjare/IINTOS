@model IEnumerable<IINTOS.Models.User>

@{
    ViewData["Title"] = "Professors to Approve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
@if (Model.Any())
{
    <div>
        <h4>School</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td><a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                        <td><a class="btn btn-success" asp-controller="Admin" asp-action="ApproveAction" asp-route-id="@item.Id">Approve</a></td>
                        <td><form method="post" action="DeleteConfirmUser"> <input type="hidden" name="userIdentification" value="@item.Id" /><input type="submit" class="btn btn-danger" value="Delete" /></form></td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
}
else
{
    <h2>There are no new users to approve</h2>
}
