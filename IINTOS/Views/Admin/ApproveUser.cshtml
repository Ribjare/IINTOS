
@model Dictionary<User, string>
@{
    ViewData["Title"] = "Users to be Approved";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Role</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Account is active?</th>
                <th scope="col">Details</th>
                <th scope="col">Approve</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (User user in Model.Keys)
            {



                <tr>

                    <td scope="row">@Model.GetValueOrDefault(user)</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Active</td>
                    <td><a class="btn btn-info" asp-action="Details" asp-route-id="@user.Id">Details</a></td>
                    <td><a class="btn btn-success" asp-action="ApproveAction" asp-route-id="@user.Id">Approved</a></td>
                    <td><form method="post" action="DeleteConfirmUser"> <input type="hidden" name="userIdentification" value="@user.Id" /><input type="submit" class="btn btn-danger" value="Apagar" /></form></td>

                </tr>
            }
        </tbody>

    </table>
}
else
{
    <h1>There are no new users to approve</h1>
}