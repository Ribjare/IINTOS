
@model Dictionary<User, string>
@{
    ViewData["Title"] = "Users to be Approved";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Role</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Account is active?</th>
                <th scope="col">Details</th>
                <th scope="col">Approve</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (User user in Model.Keys)
            {
                <tr>

                    <td scope="row">@Model.GetValueOrDefault(user)</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Active</td>
                    <td><a class="btn btn-info" asp-controller="Registation" asp-action="Details" asp-route-id="@user.Id">Details</a></td>
                    <td><a class="btn btn-success" asp-action="ApproveAction" asp-route-id="@user.Id">Approve</a></td>
                    <td>
                        <a class="btn btn-danger" asp-action="DeleteView" asp-route-id="@user.Id">Remove</a>
                        <!-- <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-whatever="@user.Id">Remove</button>-->


                    </td>

                </tr>
            }
        </tbody>

    </table>
}
else
{
    <h1>There are no new users to approve</h1>
}
<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Why are you removing this user?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="DeleteAction">
                <div class="modal-body">

                    <div class="text-danger"></div>
                    <div class="form-group">
                        <input class="form-control" id="delete-text"></textarea>
                        <span class="text-danger"></span>
                    </div>
                    <input type="text" class="id-user-delete" id="id-user-delete" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" data-dismiss="modal">Remove</button>
                </div>
            </form>
        </div>
    </div>
</div>
